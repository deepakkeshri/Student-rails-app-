<div align="center">
<%= link_to("HOME", {:controller => 'users', :action => 'list'} )%> |
<%= link_to("Add User", {:action => 'add'})%>
</div>
</br>
<p>Logged in as </p>
<table class="listing" summary= "User data" border="1" align="center">
	<tr style="background-color:#00ff00">
		<th>Name</th>
		<th>Class</th>
		<th>Section</th>
		<th>Email</th>
		<th>Mobile</th>
		<th>Present</th>
		<th>Actions</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.name %></td>
		<td><%= user.std %></td>
		<td><%= user.sec %></td>
		<td><%= user.email %></td>
		<td><%= user.mob %></td>
		<td><%= user.deleted_flag%></td>
		<td>
			<% if can? :update, @user %>
				<%= link_to("Edit", {:action => 'edit', :id => user.id})%>
			<% end %>	
			<%= link_to("Show", {:action => 'show', :id => user.id})%>
			
			<%= link_to("Delete", {:action => 'delete', :id => user.id})%>
		</td>
	</tr>
	<% end %>
</table>
<div align='center'>
<%= link_to 'Sign_out', destroy_user_session_path, :method=>'delete' %>

</div>
